# SmartCAMPOST Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=jdbc:mysql://your-host:3306/smartcampost?useSSL=true&requireSSL=true&serverTimezone=Africa/Douala
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_secure_db_password

# ==============================================
# JWT SECURITY (REQUIRED)
# ==============================================
# MUST be at least 32 characters, use a cryptographically random string
# Generate with: openssl rand -base64 48
SMARTCAMPOST_JWT_SECRET=your-very-long-secure-random-jwt-secret-key-here-minimum-32-chars

# Token validity in hours (default: 8)
JWT_EXPIRATION_HOURS=8

# ==============================================
# DEFAULT ADMIN BOOTSTRAP
# ==============================================
# Creates an admin account on first startup
# IMPORTANT: Remove or change these values after first deployment!
ADMIN_PHONE=+237690000000
ADMIN_PASSWORD=Admin@SmartCAMPOST2026
ADMIN_FULLNAME=SmartCAMPOST Administrator
ADMIN_EMAIL=admin@smartcampost.cm

# ==============================================
# QR CODE SECURITY (REQUIRED)
# ==============================================
# MUST be at least 32 characters
# Generate with: openssl rand -base64 48
QR_SECRET_KEY=your-very-long-secure-random-qr-secret-key-here-minimum-32-chars

# Maximum QR verifications per token per hour (default: 100)
QR_MAX_VERIFICATIONS=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://app.smartcampost.com

# ==============================================
# MTN MOBILE MONEY
# ==============================================
MTN_CONSUMER_KEY=your_mtn_consumer_key
MTN_CONSUMER_SECRET=your_mtn_consumer_secret
MTN_TOKEN_URL=https://sandbox.momodeveloper.mtn.com/collection/token/
MTN_INIT_URL=https://sandbox.momodeveloper.mtn.com/collection/v1_0/requesttopay

# ==============================================
# TWILIO SMS GATEWAY
# ==============================================
NOTIFICATION_GATEWAY=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# ==============================================
# OPENAI (Optional - for AI features)
# ==============================================
OPENAI_API_KEY=sk-your-openai-api-key

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=true
# General API requests per minute per IP
RATE_LIMIT_RPM=60
# Auth endpoint requests per minute per IP
AUTH_RATE_LIMIT_RPM=10

# ==============================================
# LOGGING (Production)
# ==============================================
LOG_LEVEL=INFO
SQL_LOG_LEVEL=ERROR
APP_LOG_LEVEL=INFO
SHOW_SQL=false

# ==============================================
# JPA/HIBERNATE
# ==============================================
# Use 'validate' in production, 'update' only in development
JPA_DDL_AUTO=validate

# ==============================================
# SERVER
# ==============================================
PORT=8080
